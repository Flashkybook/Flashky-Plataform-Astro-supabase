---
import Layout from "@layouts/index.astro";

import Userbook from "@/components/Userbook.astro";

import {$user} from '@lib/db/user.store'

if ($user.get() === undefined && Astro.url.pathname !== "/") {
    return Astro.redirect("/");
}

---

<Layout>
  <div class="container mx-auto mt-14">
    <Userbook  />

    <a
      class="mt-10 block text-center bg-slate-600 px-4 py-3 text-white"
      href="/app/study">Estudiar</a
    >
  </div>
</Layout>

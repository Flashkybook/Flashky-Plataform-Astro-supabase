---
import Layout from "@layouts/index.astro";

import Userbook from "@components/ListUserBooks.astro";

import {$user} from '@lib/db/user.store'

if ($user.get() === undefined && Astro.url.pathname !== "/") {
    return Astro.redirect("/");
}


---

<Layout>
  <div class="container mx-auto mt-14">
    <Userbook  />

    <a
      class="
      w-full rounded-lg p-8 shadow-md shadow-black  flex-col gap-1  dark:bg-surfacedark-500
      mt-10 block text-center bg-slate-200 px-4 py-3 text-white"
      href="/app/study">Estudiar</a
    >
  </div>
</Layout>

---
import Layout from "@layouts/index.astro";

import ListReview from "@components/StudyInterface.preact/ListReview";
import {$user} from '@lib/user/user.store'

if ($user.get() === undefined && Astro.url.pathname !== "/") {
    return Astro.redirect("/");
}

---

<Layout>
    <div class="container mx-auto ">
        <div class={"flex justify-between"}>
            <h1 class={"text-3xl font-bold mb-10"}>carrusel expressions</h1>

            <a href={"/app/study"} class={"rounded-full bg-sky-500 dark:bg-sky-400 h-11 flex items-center justify-center px-6 py-3 transition hover:bg-sky-600 focus:bg-sky-600 active:bg-sky-800"}>Nueva session</a>
        </div>
        <ListReview client:only="preact"/>
    </div>
</Layout>

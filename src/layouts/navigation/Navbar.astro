---
import BtnIcon from "@components/ui/BtnIcon.astro";
import Navigator from "./Navigator.astro";
---

<div
  class="fixed z-20 top-0 inset-x-0 px-[10%] w-full h-16 flex flex-row items-center justify-between gap-1.5 bg-surface-100 dark:bg-surfacedark-100"
>
  <a href="/">
    <h2 class="text-2xl leading-7 hover:underline">Flasky</h2>
  </a>
  <div class="flex items-center"> 
    <div class="hidden sm:flex mr-4">

      <Navigator />
    </div>
    <a href="/api/v0/auth/logout">
      <BtnIcon>
        <h2 class="hidden sm:flex">logout</h2>
        <span class="material-symbols-outlined"> logout </span>
      </BtnIcon>
    </a>
  </div>
</div>

---
import Logout from "./Logout";
import Navigator from "./Navigator.astro";
import Settings from "./Settings";
---

<div
  class="fixed z-20 top-0 inset-x-0 px-[5%] w-full h-16 flex flex-row items-center justify-between gap-1.5 bg-surface-100 dark:bg-surfacedark-100"
>
  <a href="/">
    <h2 class="text-2xl leading-7 hover:underline">Flasky</h2>
  </a>

  <Settings client:only="preact" >
    <div class="flex items-center">
      <div class="hidden sm:flex mr-4">
        <Navigator />
      </div>
      <Logout client:only="preact" />
    </div>
  </Settings>
</div>
